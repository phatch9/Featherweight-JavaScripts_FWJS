// Test 1: String literals
print("Test 1: String literals");
print("Hello");
print("");  // Empty string
print("\"Quoted\"");  // String with quotes
print("Line 1\nLine 2");  // String with newline

// Test 2: String concatenation
print("\nTest 2: String concatenation");
print("Hello" + " " + "World");
print("Number: " + 42);
print("Boolean: " + true);
print("Null: " + null);

// Test 3: String comparisons
print("\nTest 3: String comparisons");
print("apple" < "banana");  // true
print("apple" > "banana");  // false
print("apple" == "apple");  // true
print("apple" == "banana"); // false
print("apple" <> "banana"); // true

// Test 4: String with variables
print("\nTest 4: String variables");
var name = "Alice";
print("Hello, " + name + "!");

// Test 5: Strings in control structures
print("\nTest 5: Strings in control structures");
var fruit = "apple";
if (fruit == "apple") {
    print("It's an apple!");
} else {
    print("Not an apple");
}

// Test 6: String in while loop
print("\nTest 6: String in while loop");
var count = 0;
while (count < 3) {
    print("Count: " + count);
    count = count + 1;
}

// Test 7: String with escaped characters
print("\nTest 7: Escaped characters");
print("Tab:\tAfter tab");
print("Backslash: \\");
print("Newline:\nSecond line");

print("\nAll string tests completed!");
